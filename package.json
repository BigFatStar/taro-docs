{
  "name": "taro-docs",
  "private": true,
  "scripts": {
    "start": "NODE_OPTIONS=--max-old-space-size=4096 BASE=taro docusaurus start",
    "build:github": "NODE_OPTIONS=--max-old-space-size=5120 BASE=taro docusaurus build --out-dir build/taro-docs",
    "build": "npm run build:github",
    "build:independent": "NODE_OPTIONS=--max-old-space-size=5120 docusaurus build --out-dir dist",
    "build:zone": "NODE_OPTIONS=--max-old-space-size=5120 BASE=zone docusaurus build --out-dir dist",
    "build:docs-api": "ts-node --project ./scripts/tsconfig.json ./scripts/docs",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "serve": "docusaurus serve",
    "start:en": "NODE_OPTIONS=--max-old-space-size=5120 BASE=taro docusaurus start --locale en",
    "write-translations:en": "docusaurus write-translations --locale en"
  },
  "dependencies": {
    "@docusaurus/core": "2.0.0-beta.15",
    "@docusaurus/plugin-pwa": "^2.0.0-beta.15",
    "@docusaurus/preset-classic": "2.0.0-beta.15",
    "@mdx-js/react": "^1.6.21",
    "clsx": "^1.1.1",
    "prism-react-renderer": "^1.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
